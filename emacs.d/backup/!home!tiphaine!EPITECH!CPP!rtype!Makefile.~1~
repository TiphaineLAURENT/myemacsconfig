## Babel
## File description:
## Makefile
##

MKDIR	:= mkdir
CD	:= cd
CONAN	:= conan
CMAKE	:= cmake
MAKE	:= make
LN	:= ln
RM	:= rm
FONT	:= /src/font


all:
	${MKDIR} -p build \
	&& ${CD} build \
	&& ${CONAN} install .. -b missing \
	&& ${CMAKE} .. -G "Unix Makefiles" \
	&& ${CMAKE} -build .. \
	&& ${MAKE} \
	# && ${LN} -s ${PWD}/build/bin/Babel ../Babel
clean:
	${MAKE} clean -C build
	${RM} -f Babel
	${RM} -rf cmake-build-debug

fclean: clean
	${RM} -r build

re:	fclean all

.PHONY: all clean fclean
