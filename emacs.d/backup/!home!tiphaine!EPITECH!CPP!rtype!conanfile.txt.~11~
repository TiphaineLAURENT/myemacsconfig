[requires]
#sfml/2.5.0@bincrafters/stable
boost_asio/1.66.0@bincrafters/stable

[generators]
cmake_find_package
cmake_paths

[options]
sfml:shared=False
sfml:window=True
sfml:graphics=True
sfml:audio=True
sfml:network=True
boost:shared=True

[imports]
bin, *.dll -> ../bin # Copies all dll files from packages bin folder to my "bin" folder
lib, *.dylib -> ../bin # Copies all dylib files from packages lib folder to my "bin" folder
